<meta name="ac:route" content="/views/appareils/models" />

<div class="modal" id="newModel" is="dmx-bs5-modal" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title heading-text">Enregistrement d'un nouveau model d'appareils</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col">
              <form id="addModelForm" method="post" is="dmx-api-form" action="http://localhost:5243/api/modelTsp" dmx-header:authorization="connectedUser.data.token" dmx-on:success="preloader1.hide();notifies1.success('Nouveau model ajouté');newModel.toggle();models.load({})" dmx-on:start="preloader1.show()" dmx-on:done="preloader1.hide()" dmx-on:error="preloader1.hide();notifies1.danger(lastError.response)">
                <input id="UserCrea1" name="UserCrea" type="hidden" class="form-control" dmx-bind:value="connectedUser.data.matricule">

                <div class="form-group md-3">
                  <label for="modelName" class="form-label">Nom du model</label>
                  <input type="text" class="form-control" id="modelName" name="Nom" aria-describedby="input1_help" placeholder="Nom du model" />
                </div>
                <div class="form-group md-3">
                  <label for="modelDescription" class="form-label">Description</label>
                  <input type="text" class="form-control" id="modelDescription" name="Description" aria-describedby="input1_help" placeholder="Description du model" />
                </div>
                <div class="form-group md-3">
                  <label for="modelAnnee1" class="form-label">Model Année</label>
                  <input type="text" class="form-control" id="modelAnnee1" name="ModelAnnee" aria-describedby="input1_help" placeholder="L'année du model">
                </div>
                <div class="form-group md-3">
                  <label for="ReferenceModel" class="form-label">Reference</label>
                  <input type="text" class="form-control" id="ReferenceModel" name="RefModel" aria-describedby="input1_help" placeholder="Description du model" />
                </div>
                <div class="form-group md-3">
                  <label for="ImgModel" class="form-label">Image</label><input id="UploadModel" name="Img" type="file" class="form-control" />
                </div>
                <div class="d-flex mt-4 mb-1 justify-content-around">
                  <button type="submit" class="btn btn-primary" dmx-class:disabled="!UploadModel.value||!modelName.value">
                    Enregistrer</button><button type="button" class="btn btn-warning" data-bs-dismiss="modal">
                    Annuler
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal" id="editModal" is="dmx-bs5-modal" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modifier le model</h5>
      </div>
      <div class="modal-body">
        <form is="dmx-api-form" id="editModel" method="post" action="http://localhost:5243/api/modelTsp/edit" dmx-header:authorization="connectedUser.data.token" dmx-on:success="notifies1.success('Model modifié avec succes');editModal.toggle();models.load({});selectedModel.setValue((models.data.where(`IdModele`, selectedModel.value.IdModele, '=='))[0])" dmx-on:error="notifies1.danger(lastError.response.message)">
          <input id="IdModeleEdit" name="IdModele" class="form-control" dmx-bind:value="selectedModel.value.IdModele" type="hidden">

          <input id="UserCreaEdit" name="UserCrea" type="text" class="form-control visually-hidden" dmx-bind:value="connectedUser.data.matricule">
          <div class="form-group mb-3 row">
            <label for="NomEdit" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="NomEdit" name="Nom" aria-describedby="input1_help" dmx-bind:value="selectedModel.value.Nom" required="">
            </div>
          </div>
          <div class="form-group mb-3 row">
            <label for="input2" class="col-sm-2 col-form-label">Descripton</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="input2" name="Description" aria-describedby="input1_help" dmx-bind:value="selectedModel.value.Description" required="" />
            </div>
          </div>
          <div class="form-group mb-3 row">
            <label for="ModelAnnee4" class="col-sm-2 col-form-label">Année du model</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="ModelAnnee4" name="ModelAnnee" aria-describedby="input1_help" dmx-bind:value="selectedModel.value.ModelAnnee" required="">
            </div>
          </div>
          <div class="form-group mb-3 row">
            <label for="input3" class="col-sm-2 col-form-label">Reference</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="input3" name="RefModel" aria-describedby="input1_help" dmx-bind:value="selectedModel.value.RefModel" required="" />
            </div>
          </div>
          <img dmx-bind:src="selectedModel.value.Img?'data:image/jpeg;base64,'+selectedModel.value.Img:'/assets/mobile.png'" width="150">

          <div class="form-group mb-3 row">
            <label for="ModelAnnee4" class="col-sm-2 col-form-label">Nouvelle image</label>
            <div class="col-sm-10">
              <input id="file1" name="Img" type="file" class="form-control" />
            </div>
          </div>
          <div class="d-flex justify-content-around">
            <button type="submit" class="btn btn-primary">Enregistrer</button><button type="button" class="btn btn-warning" data-bs-dismiss="modal" dmx-on:click="editModel.reset()">
              Annuler
            </button>
          </div>
        </form>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>

<div class="modal" id="deleteModal" is="dmx-bs5-modal" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Etes vous sûr de vouloir supprimer ce model?
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <dl>
          <dt>Nom</dt>
          <dd>{{ selectedModel.value.Nom }}</dd>
        </dl>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" dmx-on:click="deleteModel.load({})">
          Supprimer<button type="button" class="btn btn-warning" data-bs-dismiss="modal">
            Annuler
          </button>
        </button>
      </div>
    </div>
  </div>
</div>
<dmx-notifications id="notifies1"></dmx-notifications>
<dmx-scheduler id="scheduler1" dmx-on:tick="browser1.goto('/')" delay="3" noload="true" norepeat="true"></dmx-scheduler>

<dmx-value id="selectedModel"></dmx-value>

<dmx-data-view id="ModelViewData" dmx-bind:data="models.data" dmx-bind:page="models.paging.pages" dmx-bind:pagesize="10"></dmx-data-view>
<dmx-local-manager id="connectedUser"></dmx-local-manager>
<dmx-api-action id="deleteModel" noload="true" url="http://localhost:5243/api/modelTsp/" method="delete" dmx-param:id="selectedModel.value.IdModele" dmx-header:authorization="connectedUser.data.token" dmx-on:success="notifies1.success('Model supprimé');deleteModal.toggle();models.load({});selectedModel.setValue(null)" dmx-on:error="notifies1.danger(lastError.response)"></dmx-api-action>
<dmx-api-datasource id="accessoiresData" is="dmx-fetch" noload="true" dmx-header:authorization="tokenValue.data.token" url="http://localhost:5243/api/accessoire/affectationByIdTsp"></dmx-api-datasource>
<dmx-api-datasource id="logAffectationTspData" is="dmx-fetch" noload="true" dmx-header:authorization="tokenValue.data.token" url="http://localhost:5243/api/logAffectationAM/getLogAffectationTsp"></dmx-api-datasource>
<dmx-api-datasource id="models" is="dmx-fetch" url="http://localhost:5243/api/modelTsp/all" dmx-on:success="tspViewList.add(data);loadingTsp.setValue(false)" dmx-on:unauthorized="tokenValue.removeAll();browser1.goto('/auth/login')" dmx-header:authorization="connectedUser.data.token"></dmx-api-datasource>

<div class="container-fluid">
  <div class="row ps-0 pe-0">
    <div class="col-2 model-sidebar">
      <h5 class="heading-text">Liste de tous les models</h5>
      <div class="d-flex align-items-start justify-content-between ps-1 pe-1">
        <form id="form2">
          <div class="form-group mb-3 row">
            <div class="d-flex align-items-start justify-content-center align-self-start">
              <input type="text" class="form-control form-control-sm" id="recherche" name="code" aria-describedby="input1_help" placeholder="Recherche" />
            </div>
          </div>
        </form>
      </div>
      <button id="btn2" class="btn disabled" dmx-show="loadingTsp.value">
        <span class="spinner-border spinner-border-sm" role="status"></span>chargement...
