                </div>

                <dl>
                  <dt>Nom</dt>
                  <dd>{{ selectedModel.value.Nom }}</dd>
                  <dt>Réference</dt>
                  <dd>{{ selectedModel.value.RefModel }}</dd>
                  <dt>Description</dt>

                  <dd>{{selectedModel.value.Description}}</dd>
                  <dt>Model Année</dt>
                  <dd>{{selectedModel.value.ModelAnnee}}</dd>
