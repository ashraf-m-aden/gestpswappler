<!-- Wappler include head-page="layouts/main" jquery_slim_33="cdn" fontawesome_4="cdn" is="dmx-app" id="accessoires" appconnect="local" bootstrap5="local" components="{dmxStateManagement:{},dmxBrowser:{},dmxBootstrap5TableGenerator:{},dmxNotifications:{},dmxPreloader:{},dmxScheduler:{},dmxBootstrap5Modal:{}}" -->
<div class="modal" id="addAccessoryModal" is="dmx-bs5-modal" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container" dmx-show="loading.value==false">
          <div class="row">
            <div class="col">
              <form method="post" is="dmx-api-form" id="apiform1" action="http://localhost:5243/api/accessoire" dmx-on:success="notifies1.success('Nouvel accessoire enregistré');scheduler1.start();addAccessoryModal.toggle()" dmx-on:error="notifies1.danger(lastError.response+lastError.message);scheduler1.start();loading.setValue(false)" dmx-header:authorization="connectedUser.data.token">
                <div class="row justify-content-center">
                  <div class="col-12 col-md-8 col-lg-7 col-md-5 text-center">
                    <div class="fdb-box fdb-touch">
                      <div class="row">
                        <div class="col">
                          <h1>Nouvel accessoire</h1>
                        </div>
                      </div>
                      <div class="row mt-4">
                        <div class="col">
                          <input id="DateCrea" name="DateCrea" class="form-control" dmx-bind:value="DateCreaValue.datetime" type="hidden" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <div class="form-group mb-3">
                            <label for="selectModel" class="form-label">Le model de l'accessoire</label>
                            <input id="ModeleId" name="ModeleId" class="form-control" type="hidden" />
                            <select id="selectModel" class="form-select form-select-lg form-control" dmx-bind:options="listModelAccesoires.data" optiontext="Nom" optionvalue="IdType" dmx-on:changed="ModeleId.setValue(value)" name="IdType">
                              <option selected="" value=""></option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <div class="form-group mb-3">
                            <label for="input1" class="form-label">Le nom de l'accessoire</label>
                            <input id="nomAccessoire" name="Nom" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="row mt-4">
                        <div class="col">
                          <div class="d-flex justify-content-around">
                            <button id="submit" class="btn btn-primary" type="submit" dmx-bind:disabled="!nomAccessoire.value)||(selectModel.value=='')" dmx-on:click="loading.setValue(true)">
                              Enregistrer
                            </button>

                            <button id="cancel" class="btn btn-warning" data-bs-dismiss="modal">
                              Annuler
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<dmx-value id="loadingData" dmx-bind:value="true"></dmx-value>
<dmx-local-manager id="connectedUser"></dmx-local-manager>
<dmx-value id="loading" dmx-bind:value="false"></dmx-value>
<dmx-preloader id="preloader1" spinner="doubleBounce" color="#FF011B" bgcolor="#FFEAEA" size="100" preview="true" dmx-show="loading.value==true"></dmx-preloader>
<dmx-scheduler id="scheduler1" dmx-on:tick="browser1.goto('/views/accessoires/allAccessoires')" delay="3" noload="true" norepeat="true"></dmx-scheduler>
<dmx-notifications id="notifies1"></dmx-notifications>

<dmx-datetime id="DateCreaValue"></dmx-datetime>

<dmx-api-datasource id="listModelAccesoires" is="dmx-fetch" url="http://localhost:5243/api/typeAccessoire/all" dmx-header:authorization="connectedUser.data.token"></dmx-api-datasource>
<div is="dmx-browser" id="browser1"></div>

<meta name="ac:route" content="/views/accessoires/allAccessoires" />
<dmx-value id="actualAffectation" dmx-bind:value="tableRepeat1[0].affectationAccessoire"></dmx-value>
<dmx-api-datasource id="accessoires" is="dmx-fetch" url="http://localhost:5243/api/accessoire/firstLoad" dmx-header:authorization="connectedUser.data.token" dmx-on:unauthorized="connectedUser.removeAll();browser1.goto('/auth/login')" dmx-on:done="loadingData.setValue(false)"></dmx-api-datasource>
<div class="container-fluid bg-white">
  <div class="row">
    <div class="col">


      <button id="btn1" class="btn" dmx-show="loadingData.value">
        <span class="spinner-border spinner-border-sm" role="status"></span>chargement...
      </button>

      <div class="row">
        <div class="col-12 col-md-6">
          <div class="d-flex justify-content-between mb-2">
            <h4 class="fw-bolder text-center shadow-sm lh-base fst-italic mark mb-0" style="text-decoration: underline">
              Liste de tous les accessoires
            </h4><button id="btn2" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAccessoryModal">Ajouter <i class="fa fa-plus"></i></button>
          </div>
          <form id="form1">
            <div class="form-group mb-3 row">
              <div class="col-12 col-md-6">

                <small id="select1Help" class="form-text text-muted">Choissiez le type d'accéssoire que vous voulez afficher.</small><select id="select1" class="form-select">
                  <option value="1">Option One</option>
                  <option value="2">Option Two</option>
                  <option value="3">Option Three</option>
                </select>
              </div>
            </div>
          </form>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-sm">
              <thead>
                <tr>
                  <th scope="row">Numéro de serie</th>
                  <th>Nom</th>
                  <th>Type accessoire</th>
                  <th>Affecté</th>
                  <th>Appareil</th>
                  <th>Employe</th>
                  <th>Affecté par</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="accessoires.data" id="tableRepeat1">
                <tr dmx-class:bg-info="affectationAccessoire!==null" dmx-class:text-white="affectationAccessoire!==null">
                  <td dmx-text="Nom"></td>
                  <td dmx-text="Nom"></td>
                  <td dmx-text="TypeAccessoire.Nom"></td>
                  <td dmx-text="affectationAccessoire==null?'Non':'Oui'"></td>
                  <td dmx-text="affectationAccessoire.Tsp.Nom"></td>
                  <td dmx-text="affectationAccessoire.Employe.Nom"></td>
                  <td dmx-text="affectationAccessoire.UserCrea.Nom"></td>
                  <td dmx-text="affectationAccessoire.DateCrea"></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div></div>
    </div>
  </div>
</div>